# ============================================
# Garden API Adapter - Environment Variables
# ============================================

# Server
PORT=3001
NODE_ENV=production

# n8n Base URL (for workflow proxying)
N8N_BASE_URL=http://localhost:5678

# JWT Secret (REQUIRED - same as was in Cloudflare Worker)
JWT_SECRET=your-jwt-secret-here-change-this

# Redis (KV replacement)
REDIS_URL=redis://localhost:6379

# MinIO / S3 Storage
MINIO_ENDPOINT=https://apiminio.exodus.pp.ua
MINIO_BUCKET=garden-notes
MINIO_ACCESS_KEY=your-minio-access-key
MINIO_SECRET_KEY=your-minio-secret-key

# NotebookLM Backend (Replit)
NOTEBOOKLM_BASE_URL=https://notebooklm-gateway.replit.app
NOTEBOOKLM_TIMEOUT_MS=15000
NOTEBOOKLM_SERVICE_TOKEN=optional-token
