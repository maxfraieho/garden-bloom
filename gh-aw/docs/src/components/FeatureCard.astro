---
import octicons, { type IconName } from '@primer/octicons';

interface Props {
  icon: IconName;
  title: string;
  href?: string;
  badge?: string;
}

const { icon, title, href, badge } = Astro.props;
const iconData = octicons[icon];

if (!iconData) {
  throw new Error(`Octicon "${icon}" not found. Check https://primer.style/octicons/`);
}

const svg = iconData.toSVG({ width: 28, height: 28 });
const Tag = href ? 'a' : 'div';
---

<Tag class="feature-card" href={href}>
  <div class="feature-header">
    <div class="feature-icon" set:html={svg} />
    <div class="feature-title-wrap">
      <h3 class="feature-title">{title}</h3>
      {badge && <span class="feature-badge">{badge}</span>}
    </div>
  </div>
  <div class="feature-description">
    <slot />
  </div>
</Tag>

<style>
  .feature-card {
    display: flex;
    flex-direction: column;
    gap: 0.75rem;
    padding: 1.25rem;
    border: 1px solid #30363d;
    border-radius: 6px;
    background: rgba(13, 17, 23, 0.6);
    backdrop-filter: blur(8px);
    transition: all 0.2s ease;
    text-decoration: none;
    color: inherit;
    position: relative;
    overflow: hidden;
    min-height: 12rem;
    margin: 0;
    align-self: flex-start;
  }

  .feature-card:hover {
    text-decoration: none;
  }

  .feature-card::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: linear-gradient(135deg, rgba(139, 92, 246, 0.03) 0%, transparent 100%);
    opacity: 0;
    transition: opacity 0.2s ease;
  }

  .feature-card:hover::before {
    opacity: 1;
  }

  .feature-card:hover {
    border-color: #8b5cf6;
    transform: translateY(-1px);
    box-shadow: 0 4px 12px rgba(139, 92, 246, 0.08);
  }

  .feature-header {
    display: flex;
    align-items: center;
    gap: 0.875rem;
    margin-bottom: 0.5rem;
  }

  .feature-title-wrap {
    display: flex;
    flex-direction: column;
    gap: 0.4rem;
    min-width: 0;
  }

  .feature-icon {
    flex-shrink: 0;
    width: 56px;
    height: 56px;
    display: flex;
    align-items: center;
    justify-content: center;
    align-self: center;
    background: linear-gradient(135deg, rgba(139, 92, 246, 0.15), rgba(139, 92, 246, 0.08));
    border: 1px solid rgba(139, 92, 246, 0.2);
    border-radius: 8px;
    color: #c4b5fd;
    position: relative;
    z-index: 1;
    transition: all 0.2s ease;
    box-shadow: 0 4px 12px rgba(139, 92, 246, 0.15);
  }

  .feature-card:hover .feature-icon {
    background: linear-gradient(135deg, rgba(139, 92, 246, 0.25), rgba(139, 92, 246, 0.15));
    border-color: rgba(139, 92, 246, 0.35);
    color: #ddd6fe;
    box-shadow: 0 6px 16px rgba(139, 92, 246, 0.25);
    transform: translateY(-2px);
  }

  .feature-icon :global(svg) {
    display: block;
    fill: currentColor;
    width: 28px;
    height: 28px;
    filter: drop-shadow(0 2px 4px rgba(139, 92, 246, 0.3));
  }

  .feature-content {
    flex: 1;
    min-width: 0;
    position: relative;
    z-index: 1;
  }

  .feature-title {
    margin: 0 !important;
    font-size: 1.375rem !important;
    font-weight: 700 !important;
    line-height: 1.3 !important;
    color: #f0f6fc;
    transition: all 0.2s ease;
    letter-spacing: -0.01em !important;
  }

  .feature-badge {
    align-self: flex-start;
    font-size: 0.65rem;
    line-height: 1;
    letter-spacing: 0.08em;
    font-weight: 600;
    text-transform: uppercase;
    padding: 0.30rem 0.55rem;
    border: 1px solid rgba(139,92,246,0.35);
    border-radius: 0.4rem;
    background: rgba(139,92,246,0.15);
    color: #c4b5fd;
    position: relative;
  }

  .feature-card:hover .feature-badge {
    border-color: rgba(139,92,246,0.55);
    background: rgba(139,92,246,0.22);
    color: #ddd6fe;
  }

  .feature-card:hover .feature-title {
    color: #8b5cf6;
    transform: translateX(2px);
  }

  .feature-description {
    font-size: 0.9375rem;
    line-height: 1.6;
    color: #8d96a0;
    transition: color 0.2s ease;
    flex: 1;
    display: flex;
    flex-direction: column;
    position: relative;
    z-index: 2;
  }

  .feature-card:hover .feature-description {
    color: #a9b3be;
  }

  .feature-description :global(p) {
    margin: 0 0 0.75rem 0;
  }

  .feature-description :global(p:last-child) {
    margin-bottom: 0;
    margin-top: auto;
    text-align: right;
  }

  .feature-description :global(a) {
    color: #58a6ff;
    text-decoration: none;
    font-weight: 500;
    transition: color 0.2s ease;
    display: inline-flex;
    align-items: center;
    gap: 0.25rem;
    position: relative;
    z-index: 3;
    cursor: pointer;
  }

  .feature-description :global(a:hover) {
    color: #79c0ff;
    text-decoration: underline;
  }

  :global([data-theme='light']) .feature-card {
    background: rgba(255, 255, 255, 0.9);
    border-color: #d0d7de;
  }

  :global([data-theme='light']) .feature-card::before {
    background: linear-gradient(135deg, rgba(130, 80, 223, 0.05) 0%, transparent 100%);
  }

  :global([data-theme='light']) .feature-card:hover {
    border-color: #6639ba;
    box-shadow: 0 4px 12px rgba(102, 57, 186, 0.15);
  }

  :global([data-theme='light']) .feature-icon {
    background: linear-gradient(135deg, rgba(130, 80, 223, 0.15), rgba(130, 80, 223, 0.08));
    border-color: rgba(130, 80, 223, 0.3);
    color: #6639ba;
    box-shadow: 0 4px 12px rgba(130, 80, 223, 0.15);
  }

  :global([data-theme='light']) .feature-card:hover .feature-icon {
    background: linear-gradient(135deg, rgba(130, 80, 223, 0.2), rgba(130, 80, 223, 0.12));
    border-color: rgba(130, 80, 223, 0.4);
    color: #8250df;
    box-shadow: 0 6px 16px rgba(130, 80, 223, 0.25);
  }

  :global([data-theme='light']) .feature-title {
    color: #010409;
  }

  :global([data-theme='light']) .feature-card:hover .feature-title {
    color: #6639ba;
  }

  :global([data-theme='light']) .feature-description {
    color: #424a53;
  }

  :global([data-theme='light']) .feature-card:hover .feature-description {
    color: #010409;
  }

  :global([data-theme='light']) .feature-description :global(a) {
    color: #0969da;
  }

  :global([data-theme='light']) .feature-description :global(a:hover) {
    color: #0550ae;
  }

  :global([data-theme='light']) .feature-badge {
    border-color: rgba(130,80,223,0.35);
    background: rgba(130,80,223,0.18);
    color: #6639ba;
  }

  :global([data-theme='light']) .feature-card:hover .feature-badge {
    border-color: rgba(130,80,223,0.55);
    background: rgba(130,80,223,0.25);
    color: #8250df;
  }

  @media (prefers-reduced-motion: reduce) {
    .feature-card,
    .feature-card::before,
    .feature-icon,
    .feature-title,
    .feature-description {
      transition: none;
    }
  }
</style>
